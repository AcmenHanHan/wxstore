/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  width: 750rpx;
  margin-top: 30px;
}
.notlogon {
  margin-top: 30px;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.info-show {
  display: inline-block;
}
.info {
  margin-top: 30px;
}
.info-option {
  line-height: 40px;
  border-bottom: solid;
  border-color: #F5F5F5;
  border-width: 1px;
  width: 750rpx;
  font-size: 16px;
  padding-left: 50rpx;
  background-color: white;
}
.info-option-first {
  border-top: solid;
  border-color: #F5F5F5;
  border-width: 1px;
}
.info-text {
  text-align: left;
  padding-left: 50rp;
}
.info-icon {
  text-align: right;
  position: fixed;
  right: 50rpx;
}
.notlogon {
  background-color: #F5F5F5;
}